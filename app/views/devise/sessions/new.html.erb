

<h2 class="lbl_logo">登入</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field" id="emailtest">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "電子信箱", :class => 'tbx_normal' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "密碼", :class => 'tbx_normal' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "登入" , :class => 'btn_big btn_orange' %>
  </div>
<% end %>

<%= render "devise/shared/links", locals: { myclass: 'btn_big' } %>
