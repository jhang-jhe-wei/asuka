
<style>
table{
  color:white;
  font-size: 25px;
  text-align: center;
}
thead{
  font-size:30px;
}
th, td{
  padding:20px 10px;
  font-size: 25px;
}
.btn_small{
     border:1px solid white;
     display:block;
     text-align: center;
     font-size:25px;
     color:white;
     text-decoration: none;
     padding:10px 10px;
     transition-duration: 0.2s;

}
.btn_small:hover{
  color:darkslategray;
  background-color: white;
}
.btn_small_orange:hover{
   background-color: orange;
   color:white;
}
</style>



<h1 class="lbl_logo">購物車</h1>

<table>
  <thead>
    <tr>
      <td>商品名稱</td>
      <td>數量</td>
      <td>單價</td>
      <td>小計</td>
    </tr>
  </thead>
  <tbody>
    <% current_cart.items.each do |item| %>
      <tr>
        <td><%= "#{item.product.car_maker}  #{item.product.car_type} #{item.product.size}" %></td>
        <td><%= item.quantity %></td>
        <td><%= item.product.price %></td>
        <td><%= item.price %></td>
      </tr>
    <% end %>
  </tbody>
  <tfood>
  <tr>
    <td colspan="3">總計</td>
    <td><%= current_cart.total_price %></td>
  </tfood>
</table>

<%= link_to '繼續選購', products_path, class: "btn btn-default btn_big" %>
<%= link_to '清空購物車', cart_path, method: :delete, class: "btn btn-default btn-danger", :class=>'btn_big btn_orange' %>

<%= link_to '結帳', checkout_path, class: "btn btn-default btn_big btn_orange" %>