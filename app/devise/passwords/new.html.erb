<style>
@import url('https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@100;400;700&display=swap');
*{
    font-family: 'Noto Sans TC', sans-serif;
}
body{
    background-color: darkslategray;
}
.center{
    width:100%;
    text-align: center;
    position: absolute;
    top: 35%;
    left: 50%;
    -ms-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
}
h2{
    font-size: 5em;
    color:#fff;
}
input{
  font-size: 3em;
  padding:20px 25px;
  border-radius: 3em;
  margin-top: 30px;
  width:70%;
}
.actions input{

  padding:20px 25px;
  background-color: darkslategray;
  color:white;
  border:2px white solid;
  margin-top: 15%;
  transition-duration: 0.5s;
}
.actions input:hover{
  background-color: #fff;
  color:darkslategray;
}
a{
  padding:20px 25px;
  color:white;
  margin-top: 15%;
  transition-duration: 0.5s;
  width:70%;
  font-size: 3em;
}

#user_remember_me{
  width:50px;
  height:50px;
}
label{
  font-size: 2.5em;
  color:white;
}

</style>


<div class="center">
<h2>忘記密碼?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , placeholder: "電子信箱"%>
  </div>

  <div class="actions">
    <%= f.submit "取得密碼" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>