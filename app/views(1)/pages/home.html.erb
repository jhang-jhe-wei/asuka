<style>
	@import url('https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@100;400;700&display=swap');
	*{
		font-family: 'Noto Sans TC', sans-serif;
	}
	body{
		background-color: darkslategray;
	}
	.center{
		width:100%;
		text-align: center;
		position: absolute;
		top: 40%;
		left: 50%;
		-ms-transform: translate(-50%, -50%);
		transform: translate(-50%, -50%);
	}
	h1{
		font-size: 5em;
		color:#fff;
	}
	a{
		width:80%;
		border:2px solid #fff;
		display: block;
		margin: 0 auto;
		text-decoration: none;
		color:#fff;
		padding:30px;
		font-size: 3.5em;
		border-radius: 2em;
		transition-duration: 0.5s;
		margin-top: 5%;
	}
	a:hover{
		background-color: #fff;
		color:darkslategray;
	}
	.m-top-5{
		margin-top: 10%;
	}
	.m-top-1{
		margin-top: 5%;
	}
</style>
<h1>Asuka Demo</h1>
	<% if current_user %>
		
		<div class="center">
			<%= link_to '登出',destroy_user_session_path,
				method: :delete%>
			<%= link_to '商品瀏覽',products_path%>
			<%= link_to '搜尋',search_path%>
			<%= link_to '訂單資訊',orders_path%>
        </div>
	<% else%>	
		<div class="center">	
			<%= link_to '登入',new_user_session_path %>
			<%= link_to '註冊',new_user_registration_path%>
		</div>
	<% end%>
