<style>
@import url('https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@100;400;700&display=swap');
*{
    font-family: 'Noto Sans TC', sans-serif;
}
body{
    background-color: darkslategray;
}
.center{
    width:100%;
    text-align: center;
    position: absolute;
    top: 35%;
    left: 50%;
    -ms-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
}
h2{
    font-size: 5em;
    color:#fff;
}
input{
  font-size: 3em;
  padding:20px 25px;
  border-radius: 3em;
  margin-top: 30px;
  width:70%;
}
.actions input{

  padding:20px 25px;
  background-color: darkslategray;
  color:white;
  border:2px white solid;
  margin-top: 15%;
  transition-duration: 0.5s;
}
.actions input:hover{
  background-color: #fff;
  color:darkslategray;
}
a{
  padding:20px 25px;
  color:white;
  margin-top: 15%;
  transition-duration: 0.5s;
  width:70%;
  font-size: 3em;
}

a{
      width:80%;
      border:2px solid #fff;
      display: block;
      margin: 0 auto;
      text-decoration: none;
      color:#fff;
      padding:30px;
      font-size: 3.5em;
      border-radius: 2em;
      transition-duration: 0.5s;
      margin-top:20px;
  }
  a:hover{
      background-color: #fff;
      color:darkslategray;
  }
#user_remember_me{
  width:50px;
  height:50px;
}
label{
  font-size: 2.5em;
  color:white;
}
p, strong{
  color:white;
  font-size: 1.5em;
}
.m-top-15{
  display: block;
  width:100%;
  margin-top: 15%;
}
</style>


<p id="notice"><%= notice %></p>

<div class="center">
<p>
  <strong>車牌：</strong>
  <%= @product.car_maker %>
</p>

<p>
  <strong>車種：</strong>
  <%= @product.car_type %>
</p>

<p>
  <strong>年分：</strong>
  <%= "#{@product.start_year}~#{@product.end_year}" %>
</p>

<p>
  <strong>產品尺寸：</strong>
  <%= @product.size %>
</p>

<p>
  <strong>價格：</strong>
  <%= @product.price %>
</p>
<% if current_user&&current_user.admin %>
	<%= link_to '編輯', edit_product_path(@product) %>
<% else %>
       <%= link_to '加入購物車', add_cart_path(@product),method: "post" %>
<% end %>
<%= link_to '返回', products_path %>
</div>
